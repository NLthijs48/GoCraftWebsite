{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "baseUrl": "src",
    "sourceMap": true,
    "jsx": "preserve",
    "strict": true,
    "allowJs": true,
    "removeComments": true,
    "outDir": "ts-build/"
  },
  "files": [
    "types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  }
}
