{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "baseUrl": "src",
    "sourceMap": true,
    "jsx": "preserve",
    "strict": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "removeComments": true,
    "outDir": "ts-build/"
  },
  "files": [
    "types.d.ts",
    "src/index.tsx"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "babelCore": "@babel/core",
    "reportFiles": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
